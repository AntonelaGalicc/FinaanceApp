<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="4dp"
    android:padding="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAccessibility="yes"
        android:padding="18dp">

        <TextView
            android:id="@+id/textNaziv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Naziv troška"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:accessibilityHeading="true" />

        <TextView
            android:id="@+id/textZnak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:paddingEnd="4dp" />

        <TextView
            android:id="@+id/textIznos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="-100.00 KM"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textOpis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Opis troška"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textDatum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datum: 01.01.2025"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/textKategorija"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kategorija: Ostalo"
            android:textSize="14sp"
            android:layout_marginTop="2dp"
            android:textColor="@android:color/darker_gray" />

        <ImageButton
            android:id="@+id/btnObrisi"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Obriši"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="12dp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
